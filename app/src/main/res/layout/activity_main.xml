<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fondo_inventario">

    <!-- Barra de herramientas (Toolbar) -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:title="Mi App" />

    <!-- Contenedor de los botones -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Fila de 2 botones (Izquierda y Derecha) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/buttonProducto"
                android:layout_width="0dp"
                android:layout_height="175dp"
                android:layout_weight="1"
                android:text="Agregar Producto"
                android:textSize="20sp"
                android:textColor="@color/white"
                style="@style/ButtonSquare"
                android:layout_marginEnd="8dp" /> <!-- Espacio entre los botones -->

            <Button
                android:id="@+id/buttonProveedor"
                android:layout_width="0dp"
                android:layout_height="175dp"
                android:layout_weight="1"
                android:text="Agregar Proveedor"
                android:textSize="20sp"
                android:textColor="@color/white"
                style="@style/ButtonSquare" />
        </LinearLayout>

        <!-- Fila de 2 botones (abajo) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/buttonCategoria"
                android:layout_width="0dp"
                android:layout_height="175dp"
                android:layout_weight="1"
                android:text="Agregar Categoria"
                android:textSize="20sp"
                android:textColor="@color/white"
                style="@style/ButtonSquare"
                android:layout_marginEnd="8dp" /> <!-- Espacio entre los botones -->

            <Button
                android:id="@+id/buttonReporte"
                android:layout_width="0dp"
                android:layout_height="175dp"
                android:layout_weight="1"
                android:text="Reporte Semanal"
                android:textSize="20sp"
                android:textColor="@color/white"
                style="@style/ButtonSquare" />
        </LinearLayout>

        <!-- Fila de un botÃ³n (abajo) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/buttonInventario"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:text="Inventario"
                android:textSize="20sp"
                android:textColor="@color/white"
                style="@style/ButtonSquare" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
